.index-list {
  position: relative;
  top: 170rpx;
  bottom: 0;
}
.tab-list-item {
  background-color: #ffffff;
  padding: 20rpx;
  margin-bottom: 20rpx;
  border-bottom: 1px solid #ccc;
}
.tab-list-item .list-title {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 32rpx;
  margin-bottom: 16rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  font-weight: bold;
}
.tab-list-item .image-intro {
  display: flex;
  justify-content: space-between;
}
.tab-list-item .list-image {
  display: block;
  height: 150rpx;
  width: 220rpx;
  border-radius: 10rpx;
}
.tab-list-item .list-intro {
  width: 68%;
  height: 150rpx;
  line-height: 50rpx;
  color: #444;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:3; /*控制多行文本的行数*/
}
.tab-list-item .list-intro,
.tab-list-item .list-footer {
  font-size: 28rpx;
}
.tab-list-item .list-footer{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
   color: #999;
}
.tab-list-item .list-footer .more {
  width: 40rpx;
  height: 40rpx;
}