@import '/wxParse/wxParse.wxss';
.container {
  background-color: #fff;
}
.topimg image {
  width: 100%;
  height: 300rpx;
}
.article-content {
  padding: 30rpx;
}
.user-info {
  flex: 1;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.user-text {
  margin-left: 30rpx;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  flex-direction: column;
}
.user-name {
  font-size:30rpx;
  font-weight: bold;
}
.user-other {
    font-size: 24rpx;
    color: #999;
  }
.user-photo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%
}
.read {
  margin-left: 30rpx;
}
.article-details .title {
  margin: 30rpx 0;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 1.5
}
.is-original {
  font-size: 24rpx;
  color: #aaa;
  margin-bottom: 10rpx;
}
.original {
  border: 1px solid #ccc;
  padding: 4rpx 12rpx;
  margin-right: 10rpx;
}