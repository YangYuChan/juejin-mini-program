.header {
  background-color: #3281ff;
  padding: 10rpx 0 20rpx;
}
.search-box {
  margin: 0 20rpx;
  display: flex;
  align-items: center;
  justify-content: flex-start;
  height: 66rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  font-size: 32rpx;
  padding: 0 20rpx;
}
.search-icon {
  width: 36rpx;
  height: 36rpx;
  background-size: cover;
}
.search-input {
  display: block;
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  text-align: left;
  margin-left: 20rpx;
  overflow: hidden;
  font-size: 28rpx;
  text-overflow: ellipsis;
}

.slide-image {
  width: 100%;
  display: block
}
.search-list {
  background-color: #ffffff;
  margin-bottom: 20rpx;
}
.hot-title {
  border-bottom: 1px solid #eee;
  display: flex;
  flex: 1;
  padding:24rpx 30rpx;
  justify-content: flex-start;
}

.hot-title .hot-icon {
  width: 40rpx;
  height: 40rpx;
}
.hot-title .hot-text {
  font-size: 32rpx;
  margin-left: 14rpx;
}
