.swiper-item{
  background-color: #fff;
  margin: 20rpx 0 20rpx 20rpx;
  height: 240rpx;
}
.hot-title {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  padding: 30rpx 20rpx 20rpx;
}
.hot-title .hot-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 6rpx;
}
.hot-content {
  padding: 0rpx 20rpx 30rpx;
  padding-top: 0;
  flex: 1;
  display: flex;
  justify-content: space-around;
}
.hot-content .content {
  height: 110rpx;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -moz-box-orient: vertical;
  -webkit-line-clamp:3; /*控制多行文本的行数*/
  overflow: hidden; 
  margin-right: 10rpx;
}
.content-image {
  width: 120rpx;
  height: 120rpx;
}